<div
  class="tab-pane fade show active"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="show-tab"
>
  <div class="card shadow py-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/bank"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="Name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="Name"
                aria-describedby="name"
                placeholder="Enter name"
                name="Name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="type" class="form-label">Type</label>
              <input
                type="number"
                class="form-control"
                id="type"
                aria-describedby="type"
                placeholder="Enter type"
                name="type"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Image</label>
              <input
                type="file"
                class="form-control"
                id="image"
                aria-describedby="image"
                name="image"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <div class="tab-content" id="nav-tabContent">
              <table
                class="table table-bordered"
                id="dataTableActivity"
                width="100%"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Image Url</th>
                    <th>Action</th>
                  </tr>
                </thead>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
