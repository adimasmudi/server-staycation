<!-- Modal -->
<div
  class="modal fade"
  id="modalEditActivity"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Activity</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >&times;</button>
      </div>
      <div class="modal-body">
        <form action="/admin/item/update/activity?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control name"
              id="Name"
              aria-describedby="name"
              placeholder="Enter name"
              name="Name"
              required
            />
          </div>
          <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input
              type="text"
              class="form-control type"
              id="type"
              aria-describedby="type"
              placeholder="Enter type"
              name="type"
              required
            />
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              id="image"
              aria-describedby="image"
              name="image"
              
            />
            <span>Pilih Gambar untuk update image</span>
          </div>
          
        </div>
        <div class="modal-footer">
            <input type="hidden" class="id" name="id">
            <input type="hidden" name="itemId" value="<%= itemId %>">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Close
            </button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
    </div>
  </div>
</div>
