<div
  class="tab-pane fade show active"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="show-tab"
>
  <div class="card shadow py-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="Name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="Name"
                aria-describedby="name"
                placeholder="Enter name"
                name="Name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="qty" class="form-label">Qty</label>
              <input
                type="number"
                class="form-control"
                id="qty"
                aria-describedby="qty"
                placeholder="Enter qty"
                name="qty"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Image</label>
              <input
                type="file"
                class="form-control"
                id="image"
                aria-describedby="image"
                name="image"
                required
              />
            </div>
            <input type="hidden" name="itemId" value="<%= itemId %>" />
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <div class="tab-content" id="nav-tabContent">
              <table
                class="table table-bordered"
                id="dataTable"
                width="100%"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Qty</th>
                    <th>Image Url</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i=0;i < feature.length; i++){ %>
                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= feature[i].name %></td>
                    <td><%= feature[i].qty %></td>
                    <td>
                      <img
                        src="https://masmudi-server-staycation.herokuapp.com/<%= feature[i].imageUrl %>"
                        alt="<%= feature[i].name %>"
                        width="50px"
                      />
                    </td>
                    <td>
                      <form
                        action="/admin/item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE"
                        method="POST"
                      >
                        <a
                          href="javascript:void();"
                          class="btn btn-warning btn-circle button-update"
                          data-bs-toggle="modal"
                          data-bs-target="#modalEdit"
                          data-id="<%= feature[i].id %>"
                          data-name="<%= feature[i].name %>"
                          data-qty="<%= feature[i].qty %>"
                          ><i class="fa fa-edit"></i
                        ></a>
                        <button
                          type="submit"
                          href=""
                          class="btn btn-danger btn-circle"
                        >
                          <i class="fa fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("show_modal_feature.ejs") %>
